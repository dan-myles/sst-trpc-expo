{
  "name": "@acme/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "push": "sst tunnel & sleep 2 && sst shell drizzle-kit push",
    "generate": "sst tunnel & sleep 2 && sst shell drizzle-kit generate",
    "migrate": "sst tunnel & sleep 2 && sst shell drizzle-kit migrate",
    "studio": "sst tunnel & sleep 2 && sst shell drizzle-kit studio",
    "non-tunnel-studio": "sst shell drizzle-kit studio",
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "clean": "git clean -xdf .cache .turbo dist node_modules"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.4",
    "drizzle-zod": "^0.6.1",
    "pg": "^8.13.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config"
}
